# Environment Variables for Dokploy Deployment
# Copy this file to .env.dokploy and configure your actual values

# =================================================================
# DOMAIN CONFIGURATION
# =================================================================
DOMAIN=yourdomain.com

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# Use managed PostgreSQL (Neon, Railway, etc.) or self-hosted
DATABASE_URL=postgresql://user:password@your-db-host:5432/whalli?sslmode=require

# =================================================================
# REDIS CONFIGURATION
# =================================================================
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# =================================================================
# AUTHENTICATION SECRETS
# =================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here
BETTER_AUTH_SECRET=your-very-long-and-secure-auth-secret-key-here

# =================================================================
# OAUTH PROVIDERS
# =================================================================
GITHUB_CLIENT_ID=your-github-oauth-app-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-app-client-secret
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# =================================================================
# MINIO S3 STORAGE
# =================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password-here
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}
MINIO_BUCKET=whalli-uploads
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_PUBLIC_ENDPOINT=https://storage.${DOMAIN}

# =================================================================
# STRIPE CONFIGURATION
# =================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_BASIC_PRICE_ID=price_basic_plan_id
STRIPE_PRO_PRICE_ID=price_pro_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_plan_id

# =================================================================
# AI PROVIDERS
# =================================================================
OPENAI_API_KEY=sk-proj-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
XAI_API_KEY=xai-your-xai-key-here

# =================================================================
# EMAIL CONFIGURATION (SMTP)
# =================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@${DOMAIN}
SMTP_FROM_NAME=Whalli

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
NODE_ENV=production
RATE_LIMIT_ENABLED=true
NEXT_TELEMETRY_DISABLED=1

# =================================================================
# INTERNAL SERVICE URLS (Auto-configured by Dokploy)
# =================================================================
API_URL=https://api.${DOMAIN}
NEXT_PUBLIC_API_URL=https://api.${DOMAIN}
FRONTEND_URL=https://${DOMAIN}
ADMIN_URL=https://admin.${DOMAIN}